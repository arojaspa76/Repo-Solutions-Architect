# Imagen base con Python 3.12
FROM python:3.12-slim

# Mantiene el contenedor actualizado y define variables de entorno
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    APP_HOME=/workspace/app

# Crear directorios de trabajo
WORKDIR ${APP_HOME}

# Instalar dependencias del sistema necesarias para OpenCV y PDF parsing
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libpoppler-cpp-dev \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Copiar archivos del proyecto
COPY . ${APP_HOME}

# Instalar dependencias Python
RUN pip install --upgrade pip && pip install \
    opencv-python-headless==4.10.0.84 \
    pillow \
    numpy \
    langchain \
    faiss-cpu \
    sentence-transformers \
    pymupdf \
    fastapi \
    uvicorn[standard]

# Exponer puerto 8000 para API FastAPI
EXPOSE 8000

# Comando de ejecuci√≥n
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
